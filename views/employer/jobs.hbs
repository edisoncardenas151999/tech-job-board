<title>Jobs</title>
<ul class="list-wrapper">
    {{#if user.jobs}}
    {{#each user.jobs}}
    <div class="job-detail-container">
        <div class="job-info-header">
            <h3 class="job-title">{{jobTitle}}</h3>
            <h4 class="job-company">{{company}}</h4>
            <p class="job-location">{{location}}</p>
        </div>
        <div class="job-info-details">
            <p class="job-salary">${{salary}} annually</p>
            <p class="job-description">{{description}}</p>
        </div>
        <a href="/employer/{{_id}}/edit" class="employer-job-edit">Edit</a>
        <br>
        <a href="/employer/{{_id}}/applicants" class="employer-job-applicants">View Applicants</a>

    </div>
    {{/each}}
    {{else}}

    <div class="submission-container">
        <h2 class="application-message">No jobs Found, Create New Job Post</h2>
    </div>
    {{/if}}
</ul>
<br>
<a href="dashboard" class="back-link">back</a>


